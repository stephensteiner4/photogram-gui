<ul>
  <li><a href="/users">Users</a></li>
  <li><a href="/photos">Photos</a></li>
</ul>

<h1><%=@user_info.username%></h1>

<dl>
  <dt>
    ID
  </dt>
  <dd>
    <%=@user_info.id%>
  </dd>

  <dt>
    Edit user
  </dt>
  <dd>
    <form action="/modify_user/<%=@user_info.username%>" method="post">
      <label for="edit_username">Username</label>
      <input name="edit_username" id="new_username" value=<%=@user_info.username %>>
      <button>Update user</button>

    </form>
  </dd>
</dl>

<h2>Own photos (<%= @user_info.own_photos.size %>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>
    <th>
      Owner
    </th>
    <th>
      Caption
    </th>
    <th>
      Posted
    </th>
    <th>
    </th>
  </tr>

  <% @photo_list.each do |photo| %>
    <tr>
      <td>
        <img src="<%= photo.image%>" >
      </td>
      <td>
        <%= photo.poster.username %>
      </td>
      <td>
        <%= photo.caption %>
      </td>
      <td>
        <%= photo.created_at %>
      </td>
      <td>
        Show details
      </td>
    </tr>
  <% end %>

</table>
