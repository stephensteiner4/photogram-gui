<ul>
  <li><a href="/users">Users</a></li>
  <li><a href="/photos">Photos</a></li>
</ul>

<h1>List of photos</h1>

<form action="/add_photo" method="post">
  <label for="add_src">Image</label>
  <input name="add_src" id="addimg_src" placeholder="Enter a URL for the image...">

  <label for="add_caption">Caption</label>
  <textarea name="add_caption" id="addimg_caption" placeholder="Enter a caption for the photo..."></textarea>

  <label for="add_ownerid">Owner ID</label>
  <input name="add_ownerid" id="addimg_ownerid" placeholder="Enter an ID of a User">

  <button>Add photo</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      Image
    </th>
    <th>
      Caption
    </th>
    <th>
      Owner
    </th>
    <th>
      Posted
    </th>
    <th>
    </th>
  </tr>

  <% @list_of_photos.each do |photo| %>
    <tr>
      <td>
        <img src="<%=photo.image%>" >
      </td>
      <td>
        <%= photo.caption %>
      </td>
      <td>
        <%= photo.poster.username %>
      </td>
      <td>
        <%= photo.created_at %>
      </td>
      <td>
        <a href="/photos/<%=photo.id%>">Show details</a>
      </td>
    </tr>
  <% end %>

</table>
